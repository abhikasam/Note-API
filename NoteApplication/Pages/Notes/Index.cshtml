@page
@model NoteApplication.Pages.Notes.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<a href="/Notes/Edit" class="btn btn-primary">
    Add New
</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Note Id</th>
            <th>Content</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model.Notes)
        {
            <tr>
                <td>@note.NoteId</td>
                <td>@note.Content</td>
                <td><a href="/notes/edit?id=@note.NoteId">Edit</a></td>
                <td><a href="/notes/delete?id=@note.NoteId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
